parameter_defaults:
  ContainerImagePrepare:
  - push_destination: true
    set:
      ceph_alertmanager_image: ose-prometheus-alertmanager
      ceph_alertmanager_namespace: registry.redhat.io/openshift4
      ceph_alertmanager_tag: {{ RHOSP_version_supported[RHOSP_version].container_image_prepare.ceph_alertmanager_tag }}
      ceph_grafana_image: {{ RHOSP_version_supported[RHOSP_version].container_image_prepare.ceph_grafana_image }}
      ceph_grafana_namespace: registry.redhat.io/rhceph
      ceph_grafana_tag: {{ RHOSP_version_supported[RHOSP_version].container_image_prepare.ceph_grafana_tag }}
      ceph_image: {{ RHOSP_version_supported[RHOSP_version].container_image_prepare.ceph_image }}
      ceph_namespace: registry.redhat.io/rhceph
      ceph_node_exporter_image: ose-prometheus-node-exporter
      ceph_node_exporter_namespace: registry.redhat.io/openshift4
      ceph_node_exporter_tag: {{ RHOSP_version_supported[RHOSP_version].container_image_prepare.ceph_node_exporter_tag }}
      ceph_prometheus_image: ose-prometheus
      ceph_prometheus_namespace: registry.redhat.io/openshift4
      ceph_prometheus_tag: {{ RHOSP_version_supported[RHOSP_version].container_image_prepare.ceph_prometheus_tag }}
      ceph_tag: latest
      name_prefix: openstack-
      name_suffix: ''
      namespace: {{ RHOSP_version_supported[RHOSP_version].container_image_prepare.namespace }}
      neutron_driver: ovn
      rhel_containers: false
      tag: '{{ RHOSP_version }}{{ '.' ~ RHOSP_release if RHOSP_release != 'latest' else '' }}'
    tag_from_label: '{version}-{release}'
  ContainerImageRegistryLogin: false
  ContainerImageRegistryCredentials:
    registry.redhat.io:
{% if rh_serviceaccount and rh_token %}
      {{ rh_serviceaccount }}: "{{ rh_token }}"
{% else %}
      {{ rh_username }}: '{{ rh_password }}'
{% endif %}