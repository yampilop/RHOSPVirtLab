parameter_defaults:
  NeutronBridgeMappings: "datacentre:br-ex"
  NeutronPhysicalBridge: "br-ex"
  ControllerExtraConfig:
    nova::scheduler::filter::scheduler_host_subset_size: '999'
    horizon::keystone_multidomain_support: true
  AllNodesExtraConfig:
    swap_size_megabytes: '8192'
  PublicVirtualFixedIPs: [{'ip_address':'{{ overcloud_ip }}'}]
  HostnameMap:
{% for vm in vms | sort(attribute='name') if vm.profile == 'control' %}
    overcloud-controller-{{ loop.index0 }}: {{ vm.name }}
{% endfor %}
{% for vm in vms | sort(attribute='name') if vm.profile == 'compute' %}
    overcloud-novacompute-{{ loop.index0 }}: {{ vm.name }}
{% endfor %}
